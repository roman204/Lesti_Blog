<?xml version="1.0"?>
<config>
    <modules>
        <Lesti_Blog>
            <version>0.1.2</version>
        </Lesti_Blog>
    </modules>
    <frontend>
        <routers>
            <blog>
                <use>standard</use>
                <args>
                    <module>Lesti_Blog</module>
                    <frontName>blog</frontName>
                </args>
            </blog>
        </routers>
        <layout>
            <updates>
                <blog>
                    <file>blog.xml</file>
                </blog>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <blog>
                <class>Lesti_Blog_Block</class>
            </blog>
        </blocks>
        <helpers>
            <blog>
                <class>Lesti_Blog_Helper</class>
            </blog>
        </helpers>
        <models>
            <blog>
                <class>Lesti_Blog_Model</class>
                <resourceModel>blog_resource</resourceModel>
            </blog>
            <blog_resource>
                <class>Lesti_Blog_Model_Resource</class>
                <entities>
                    <post>
                        <table>blog_post</table>
                    </post>
                    <post_store>
                        <table>blog_post_store</table>
                    </post_store>
                    <category>
                        <table>blog_category</table>
                    </category>
                    <category_store>
                        <table>blog_category_store</table>
                    </category_store>
                    <category_post>
                        <table>blog_category_post</table>
                    </category_post>
                    <tag>
                        <table>blog_tag</table>
                    </tag>
                    <tag_store>
                        <table>blog_tag_store</table>
                    </tag_store>
                    <tag_post>
                        <table>blog_tag_post</table>
                    </tag_post>
                    <post_comment>
                        <table>blog_post_comment</table>
                    </post_comment>
                    <author>
                        <table>blog_author</table>
                    </author>
                </entities>
            </blog_resource>
        </models>
        <resources>
            <blog_setup>
                <setup>
                    <module>Lesti_Blog</module>
                </setup>
            </blog_setup>
        </resources>
        <events>
            <controller_front_init_routers>
                <observers>
                    <blog>
                        <class>Lesti_Blog_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </blog>
                </observers>
            </controller_front_init_routers>
            <admin_user_save_after>
                <observers>
                    <blog>
                        <class>Lesti_Blog_Model_Observer</class>
                        <method>addNewAuthor</method>
                    </blog>
                </observers>
            </admin_user_save_after>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <blog>
                    <file>blog.xml</file>
                </blog>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <blog before="Mage_Adminhtml">Lesti_Blog_Adminhtml</blog>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <blog>
            <general>
                <router>blog</router>
                <title>Blog</title>
            </general>
            <sidebar>
                <show_post>1</show_post>
                <recent_posts_count>5</recent_posts_count>
                <show_comment>1</show_comment>
                <recent_comments_count>5</recent_comments_count>
                <show_archive>1</show_archive>
                <show_category>1</show_category>
                <show_tag>1</show_tag>
            </sidebar>
        </blog>
    </default>
</config>
